<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Name"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15dp"
            android:padding="15dp" android:layout_alignParentStart="false" android:layout_alignParentTop="true"
            android:visibility="invisible"/>
    <TextView
            android:id="@+id/group_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_alignParentStart="true" android:layout_alignLeft="@+id/group_name"
            android:layout_alignBottom="@+id/group_name" android:paddingLeft="15dp" android:text="Group of 5 leaving at"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:50"
            android:id="@+id/group_time"
            android:layout_marginEnd="39dp" android:textSize="20dp"
            android:layout_alignBaseline="@+id/group_size" android:layout_alignBottom="@+id/group_size"
            android:layout_alignParentEnd="true"/>


</RelativeLayout>